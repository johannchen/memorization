{{#with verse}}
  {{view Ember.TextField valueBinding="title" placeholder="Title e.g John 3:16"}}
  {{view Ember.TextArea valueBinding="content" placeholder="Content"}}
  {{#if id}}
    {{submitButton "Update"}}
  {{else}}
    {{submitButton "Create"}}
  {{/if}}
  <a href="#" {{action "cancelForm"}}>Cancel</a>
{{/with}}
