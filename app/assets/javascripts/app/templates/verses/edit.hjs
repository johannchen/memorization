<div class="card">
{{#with verse}}
  {{view Ember.TextField valueBinding="title" placeholder="Title e.g John 3:16"}}
	<br />
  {{view Ember.TextArea rows="10" cols="40" valueBinding="content" placeholder="Content to memorize"}}
	<br />
  {{#if id}}
    {{submitButton "Update"}}
  {{else}}
    {{submitButton "Create"}}
  {{/if}}
  <a href="#" {{action "cancelForm"}}>Cancel</a>
{{/with}}
</div>
